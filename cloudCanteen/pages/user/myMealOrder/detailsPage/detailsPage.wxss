  padding: 0;
  overflow: hidden;
}

.box-info {
  width: 708rpx;
  border: 1rpx solid #d0d0d0;
  background: #fff;
  margin: 0 auto;
  border-radius: 10rpx;
  margin-top: 21rpx;
  padding: 0rpx 32rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}


/* pages/mealorder/confirm/confirm.wxss */
@import "/component/tipToast/tipToast.wxss";

.container {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #ececec;
  color: #939393;
  /*flex-flow: row wrap;*//*justify-content: space-between;*/
  padding: 0;
  overflow: hidden;
}

.cart {
  width: 100%;
  height: 100%;
  z-index: 99999999;
  /*position:fixed;*//*display: block;*//* display: flex; *//* flex-direction: column; *//*bottom: 0;*/
}

page {
  height: 100%;
  overflow: hidden;
}

.cart .money {
  width: 100%;
  height: 102rpx;
  line-height: 102rpx;
  background: #fff;
  border-top: 1rpx solid #bfbfbf;
  position: fixed;
  bottom: 0;
  z-index: 99;
  /* flex: 0 0 auto; */
}

.cart .carticon {
  width: 93rpx;
  height: 93rpx;
  transform: translate3d(36rpx, -11rpx, 0);
  /*z-index: 999;*/
}

.cart .money>text {
  font-size: 28rpx;
  color: #424242;
  transform: translate3d(45rpx, 0rpx, 0);
  display: inline-block;
  margin-right: 46rpx;
}

.cart .money>text text {
  font-size: 32rpx;
  color: #fd4b00;
  font-weight: bold;
  margin-right: 10rpx;
}

.cart button {
  float: right;
  width: 279rpx;
  height: 100%;
  background: #24b457;
  color: #fff;
  border-radius: 0;
}

.cart .title {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 0 28rpx 0 18rpx;
  box-sizing: border-box;
  background: #fff;
}

.cart .title image {
  width: 29rpx;
  height: 29rpx;
  color: #9a9a9a;
}

.cart .cartlist {
  /*max-height: 783rpx;*//* display: inline-block;*/
  height: 90%;
  overflow-y: scroll;
}

.cart .cartlist-itemtit {
  height: 56rpx;
  line-height: 56rpx;
  border-left: 8rpx solid #53c123;
  font-size: 25rpx;
  border-top: 1rpx solid #d7d7d7;
  border-bottom: 1rpx solid #d7d7d7;
  padding: 0rpx 28rpx;
  display: inline-block;
  color: #222;
  width: 100%;
}

.cart .cartlist-itemtit-disable {
  height: 53rpx;
  font-size: 26rpx;
  color: #fff;
  background: #de4962;
  line-height: 53rpx;
  text-align: center;
}

.cart .cartlist-items {
  /* background: #fff; */
  position: relative;
  margin-bottom: 16rpx;
  /* flex: 1 0 auto; */
  overflow-x: hidden;
  /* height: 50%; */
}

.cart .cartlist-items-disable {
  pointer-events: none;
  border-bottom: 2rpx solid #de4962;
  /* height: 100%; */
  width: 100%;
  background: #222;
}

.cart .cartlist-item {
  width: 100%;
  /*display: inline-block;*/
  padding: 0 18rpx;
  box-sizing: border-box;
  color: #222;
  border-bottom: 1rpx solid #ececec;
  font-size: 29rpx;
}

.cart .cartlist-item>view {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cart .cartlist-item-1 {
  width: 100%;
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
}

.cart .cartlist-item-2 {
  font-size: 22rpx;
  color: #7b7b7b;
  line-height: 68rpx;
}

.cart .triangle-up {
  width: 0;
  height: 0;
  border-left: 15rpx solid transparent;
  border-right: 15rpx solid transparent;
  border-bottom: 23rpx solid #fff;
  transform: translate3d(70rpx, 0rpx, 0);
}

.cart .address {
  /* display: flex;
  justify-content: space-between; */
  height: 105rpx;
  line-height: 105rpx;
  padding: 0 18rpx;
  box-sizing: border-box;
}

.cart .address>view {
  /* display: flex;
  justify-content: space-between; */
  float: left;
}

.cart .address picker {
  width: 304rpx;
  height: 62rpx;
  line-height: 62rpx;
  color: #3c3c3c;
  border: 1rpx solid #9a9a9a;
  padding: 0 20rpx;
  margin-top: 23rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cart .remark {
  width: 706rpx;
  height: 62rpx;
  line-height: 62rpx;
  font-size: 26rpx;
  margin: 20rpx 30rpx 20rpx 10rpx;
  border: 1rpx solid #c6c6c6;
  padding: 0rpx 15rpx;
  box-sizing: border-box;
}

.cart .address image {
  width: 65rpx;
  height: 66rpx;
  margin-top: 23rpx;
  margin-left: -5rpx;
}

@keyframes rotateup {
  from {
    transform: rotate(180deg);
  }

  to {
    transform: rotate(0deg);
  }
}

.rotateup {
  display: block;
  animation: rotateup 0.1s ease-in both;
}

@keyframes rotatedown {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(180deg);
  }
}

.rotatedown {
  display: block;
  animation: rotatedown 0.1s ease-in both;
}

